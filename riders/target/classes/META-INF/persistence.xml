<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Riders" transaction-type="JTA">
	<jta-data-source>RidersResource</jta-data-source>
	<class>entities.Driver</class>
	<class>entities.Route</class>
	<class>entities.Trip</class>
	<class>entities.SalaryRequest</class>
	<class>entities.SalaryBonus</class>
	<class>entities.SalaryTax</class>
	<properties>
	<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
	</properties>
	</persistence-unit>
</persistence>
